    <flow name="SFDC-streaming-inbound">
        <sfdc:subscribe-topic config-ref="Salesforce__Basic_Authentication" topic="s" doc:name="Salesforce (Streaming)"/>
        <dw:transform-message doc:name="Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
{
}]]></dw:set-payload>
        </dw:transform-message>
        <smtp:outbound-endpoint host="localhost" responseTimeout="10000" doc:name="SMTP"/>
    </flow>
</mule>
